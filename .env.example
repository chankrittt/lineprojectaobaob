# Application
APP_NAME=Drive2
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (Local Docker)
DATABASE_URL=postgresql+asyncpg://drive2_user:drive2_password@localhost:5432/drive2_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (Local Docker)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=0
REDIS_CELERY_DB=1

# Celery (Local Docker Redis)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Qdrant (Local Docker)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=drive2_files
QDRANT_VECTOR_SIZE=768

# MinIO (External Server - 172.27.15.49)
MINIO_ENDPOINT=172.27.15.49:9000
MINIO_ACCESS_KEY=your_access_key_here
MINIO_SECRET_KEY=your_secret_key_here
MINIO_BUCKET_NAME=drive2-files
MINIO_SECURE=False

# LINE
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_LIFF_ID=your_liff_id_here

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# File Processing
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,jpg,jpeg,png,gif,mp4,zip
THUMBNAIL_SIZE=300
OCR_LANGUAGE=eng+tha

# Rate Limiting
GEMINI_RPM_LIMIT=15
GEMINI_DAILY_LIMIT=1500
